<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroUsuarios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">


        <EditText
            android:id="@+id/editNombres"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Nombres"
            android:inputType="text" />

        <EditText
            android:id="@+id/editApPaterno"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Apellido Paterno"
            android:inputType="text" />

        <EditText
            android:id="@+id/editApMaterno"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Apellido Materno"
            android:inputType="text" />

        <EditText
            android:id="@+id/editRut"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Rut"
            android:inputType="text" />

        <EditText
            android:id="@+id/editContrasenia"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="ContraseÃ±a"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTelefono"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Telefono"
            android:inputType="text" />

        <EditText
            android:id="@+id/editMail"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="E-Mail"
            android:inputType="text" />

        <Button
            android:id="@+id/buttonRegistrarCli"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:text="Registrar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>